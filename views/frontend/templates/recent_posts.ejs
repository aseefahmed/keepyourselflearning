<div class="widget">
	<div class="widget-title">
		<h4>Recent Posts</h4>
	</div>
	<ul class="comments-list">
		<% recents.forEach(function(recent){ %>
				<li>
					<div class="alignleft">
						<a title="<%= recent.title %>" target="_blank" href="<% if(typeof recent.external_link == 'undefined' || recent.external_link == ""){%>/post/get/<%= recent._id %><%}else{%><%= recent.external_link %><%} %>"><img src="/img/uploads/<%= recent.image %>" alt="<%= recent.title %>"></a>
					</div>
					<small><%= new Date(recent.created_at).toDateString() %></small>
					<h3><a title="<%= recent.title %>" target="_blank" href="<% if(typeof recent.external_link == 'undefined' || recent.external_link == ""){%>/post/get/<%= recent._id %><%}else{%><%= recent.external_link %><%} %>"><%= recent.title %></a></h3>
				</li>
		<% }) %>
		
	</ul>
</div>
<div class="widget">
	<div class="widget-title">
		<h4>Popular Posts</h4>
	</div>
	<ul class="comments-list">
		<% popular_posts.forEach(function(pop){ %>
				<li>
					<div class="alignleft">
						<a href="/post/get/<%= pop._id %>" title="<%= pop.title %>"><img src="/img/uploads/<%= pop.image %>" alt="<%= pop.title %>"></a>
					</div>
					<small><%= new Date(pop.created_at).toDateString() %></small>
					<h3><a href="/post/get/<%= pop._id %>" title="<%= pop.title %>"><%= pop.title %></a></h3>
				</li>
		<% }) %>
		
	</ul>
</div>