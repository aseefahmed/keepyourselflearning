	<script src="assets/validate.js"></script>
	
	<!-- SPECIFIC SCRIPTS -->
	<script src="js/pw_strenght.js"></script>
    <script>
		$(function(){
			$('#register_btn').click(function(e){
					e.preventDefault();
					if($('#first_name').val() == ""){
						$('#fname_err').html('* required');
						return false;
					}else{
						$('#fname_err').html('');
					}
					if($('#last_name').val() == ""){
						$('#lname_err').html('* required');
						return false;
					}else{
						$('#lname_err').html('');
					}
					if($('#email').val() == ""){
						$('#email_err').html('* required');
						return false;
					}else{
						$('#email_err').html('');
					}
					if($('#password').val() == ""){
						$('#password_err').html('* required');
						return false;
					}else{
						$('#password_err').html('');
					}
					if($('#password').val() != $('#confirm_password').val()){
						$('#confirm_pass_err').html("* not matched");
						return false;
					}else{
						$('#confirm_pass_err').html('');
					}

					let data = {
						first_name: $('#first_name').val(),
						last_name: $('#last_name').val(),
						email: $('#email').val(),
						password: $('#password').val(),
					}
					$.post('/register', data, function(data){
						$('#msg').css('display', 'block');
					});
			});
		})
	</script>
</body>

