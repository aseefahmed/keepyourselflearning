					<div class="bloglist singlepost">
						<p><img width="100%" alt="" class="img-fluid" src="/img/uploads/<%- details[0].image %>"></p>
						<h1><%= details[0].title %></h1>
						<div class="postmeta">
							<ul>
								<li><a href="#"><i class="icon_folder-alt" style="color:rgb(23,144,233);"></i> <%- details[0].category %></a></li>
								<li><a href="#"><i class="icon_clock_alt" style="color:rgb(23,144,233);"></i> <%= new Date(details[0].created_at).toDateString() %></a></li>
								<li><a href="#"><i class="icon_pencil-edit" style="color:rgb(23,144,233);"></i> <%= details[0].created_by %></a></li>
								<li><a href="#"><i class="icon_comment_alt" style="color:rgb(23,144,233);"></i> (<% if(typeof details[0].comments != 'undefined'){%><%= details[0].comments.length %><%}else{%>0<%} %>) Comments</a></li>
							</ul>
						</div>
						<!-- /post meta -->
						<div class="post-content">
							<div class="dropcaps">
								<p><%- details[0].description %></p>
								<hr />
								<span style="font-weight:bold;">Tag(s): </span> 
								<% if(details[0].tags.length == 1) { %>
									<% if(details[0].tags[0] == "") { %>
										<span style="font-weight:bold;color:purple;">Not Tagged</span>
									<% }else { %>
											<a href="/blog/tag/<%= details[0].tags[0] %>" style="font-weight:bold;color:purple;"><%= details[0].tags[0].toUpperCase() %></a>
									<% } %>
								<% }else{ %>
									<% details[0].tags.forEach(function(tag, key){ %>
											<a href="/blog/tag/<%= tag %>" style="font-weight:bold;color:purple;"><%= tag.toUpperCase() %></a>
											<% if(key != (details[0].tags.length-1)) { %>
													/
											<% } %>
									<% }) %>
								<% } %>
								
								<hr />
							</div>
						</div>
						<!-- /post -->
					</div>
					<!-- /single-post -->
					
