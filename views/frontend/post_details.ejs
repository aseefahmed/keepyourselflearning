					<hr>

					<h5>Leave a Comment</h5>
					<form method="post" action="/comment/submit">
						<input type="hidden" name="post_id" id="post_id" value="<%= details[0]._id %>">
						<div class="form-group">
							<input type="text" name="name" id="name" class="form-control comment_input" placeholder="Name">
							<span id="name-err" style="color:red; display:none;" class='comment_form_input'>This filed is required</span>
						</div>
						<div class="form-group">
