<% include templates/head.ejs %>

<body>
	
	<% include templates/main_menu.ejs %>
	<!-- /main_menu -->
	
	<main>
		<section class="header-video">
			<div id="hero_video">
				<div>
					<h3><strong>Top courses</strong><br>on <span style="color:gold">Keep Yourself Learning</span></h3>
					<p>We keep our knowledge updated with <strong>latest technologies</strong> and so you do.</p>
				</div>
				<a href="#first_section" class="btn_explore hidden_tablet"><i class="ti-arrow-down"></i></a>
			</div>
			<img src="img/video_fix.png" alt="" class="header-video--media" data-video-src="video/intro" data-teaser-source="video/intro" data-provider="" data-video-width="1920" data-video-height="960">
		</section>
		<!-- /header-video -->

		<ul id="grid_home" class="clearfix">
			<li>
				<a href="#0" class="img_container">
					<img src="img/grid_home_1.jpg" alt="">
					<div class="short_info">
						<h3><strong>Latest Udema</strong>Courses</h3>
						<div><span class="btn_1 rounded">Read more</span></div>
					</div>
				</a>
			</li>
			<li>
				<a href="#0" class="img_container">
					<img src="img/grid_home_2.jpg" alt="">
					<div class="short_info">
						<h3><strong>Community</strong>Students</h3>
						<div><span class="btn_1 rounded">Read more</span></div>
					</div>
				</a>
			</li>
			<li>
				<a href="#0" class="img_container">
					<img src="img/grid_home_1.jpg" alt="">
					<div class="short_info">
						<h3><strong>Admission</strong>Apply</h3>
						<div><span class="btn_1 rounded">Submit</span></div>
					</div>
				</a>
			</li>
		</ul>
		<!--/grid_home -->

		<div class="container-fluid margin_120_0" id="first_section">
			<div class="main_title_2">
				<span><em></em></span>
				<h2>Our Popular Courses</h2>
			</div>
			<div id="reccomended" class="owl-carousel owl-theme">
				<% courses.forEach(function(course){%>
				<div class="item">
					<div class="box_grid">
						<figure>
							<a href="/course/get/<%= course._id %>" class="wish_bt"></a>
							<a href="course-detail.html">
								<div class="preview"><span>Preview course</span></div><img src="/img/courses/uploads/<%= course.image %>" class="img-fluid" alt="<%= course.title %>"></a>
							<div class="price">$<%= course.price %></div>

						</figure>
						<div class="wrapper">
							<small><%= course.category %></small>
							<h3><%= course.title %></h3>
							<p><%= course.short_description %></p>
							<!--div class="rating"><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star"></i><i class="icon_star"></i> <small>(145)</small></div-->
						</div>
						<ul>
							<li>&nbsp;</li>
							<li>&nbsp;</li>
							<li><a href="/course/get/<%= course._id %>">Details</a></li>
						</ul>
					</div>
				</div>
				<% }) %>
			</div>
			<!-- /carousel -->
			<div class="container">
				<p class="btn_home_align"><a href="/courses" class="btn_1 rounded">View all courses</a></p>
			</div>
			<!-- /container -->
			<hr>
		</div>
		<!-- /container -->

		<div class="container margin_30_95">
			<div class="main_title_2">
				<span><em></em></span>
				<h2>Course Categories</h2>
			</div>
			<div class="row">
				<% categories.forEach(function(category){ %>
					<!-- /grid_item -->
					<div class="col-lg-4 col-md-6 wow" data-wow-offset="150">
						<a href="/courses/<%= category.name %>" class="grid_item">
							<figure class="block-reveal">
								<div class="block-horizzontal"></div>
								<img src="img/courses/uploads/<%= category.image %>" class="img-fluid" alt="">
								<div class="info">
									<small><i class="ti-layers"></i><%= category.no_of_programs %> Courses</small>
									<h3><%= category.name.toUpperCase() %></h3>
								</div>
							</figure>
						</a>
					</div>
					<!-- /grid_item -->
				<% }) %>
				
				
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->

		<div class="bg_color_1">
			<div class="container margin_120_95">
				<div class="main_title_2">
					<span><em></em></span>
					<h2>Latest Articles</h2>
				</div>
				<div class="row">
					<% latest_posts.forEach(function(latest){ %>
						<!-- /box_news -->
						<div class="col-lg-6">
							<a class="box_news" href="/post/get/<%= latest._id %>">
								<figure><img src="/img/uploads/<%= latest.image %>" alt="">
									<figcaption><strong><% if(latest.created_at.getDate()<10){%>0<%} %><%= latest.created_at.getDate() %></strong><%= months[latest.created_at.getMonth()].substring(0,3) %></figcaption>
								</figure>
								<h4><%= latest.title %></h4>
								<p><%= latest.short_description.substring(0,100) %></p>
							</a>
						</div>
						<!-- /box_news -->
					<% }) %>
					
				</div>
				<!-- /row -->
				<p class="btn_home_align"><a href="/blog" class="btn_1 rounded">View all articles</a></p>
			</div>
			<!-- /container -->
		</div>
		<!-- /bg_color_1 -->

		<div class="call_section">
			<div class="container clearfix">
				<div class="col-lg-5 col-md-6 float-right wow" data-wow-offset="250">
					<div class="block-reveal">
						<div class="block-vertical"></div>
						<div class="box_1">
							<h3>Enjoy a Great DevOps Experience</h3>
							<p>Becoming a professional DevOps Engineer takes time. Its a matter of lots of hands on real life experiences and studies. You need to be familiar with lots of DevOps tools including cloud computing.</p>
							<a href="/post/get/5aec8be7b036d848b65a0c27" target="_blank" class="btn_1 rounded">Read more</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!--/call_section-->
	</main>
	<!-- /main -->
	
	<% include templates/footer.ejs %>

</body>

</html>